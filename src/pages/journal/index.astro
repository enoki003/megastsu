---
import { getCollection } from "astro:content";
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import PostPanel from '../../components/PostPanel.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const all = await getCollection("journal", ({ data }) => !data.draft);
const sorted = all.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <BaseHead title={`Journal - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
    <style>
      .card-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        list-style: none;
        padding: 0;
        margin: 0;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <h1>Journal</h1>
      <ul class="card-list">
        {sorted.map((e) => (
          <li>
            <PostPanel
              href={`/journal/${e.slug}/`}
              title={e.data.title}
              date={e.data.date}
              description={e.data.description}
            />
          </li>
        ))}
      </ul>
    </main>
    <Footer />
  </body>
</html>
